<Window x:Class="NewCustomerWindow.CarInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Car Wash Invoice" 
        Height="1130" Width="600"
        WindowStartupLocation="CenterScreen"
          WindowState="Maximized"
        Background="#F5F5F7">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="White" Margin="0,0,0,20">
            <Border Background="#4F46E5" Padding="8" CornerRadius="10,10,0,0">
                <StackPanel>
                    <TextBlock Text="🚗 AARVI CAR WASHING SERVICE" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Professional Car Care Solutions" 
                               FontSize="12" Foreground="#E0E7FF" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Invoice Info Bar -->
            <Border Background="#EEF2FF" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Invoice Number" FontSize="11" Foreground="#6B7280"/>
                        <TextBlock x:Name="txtInvoiceNumber" Text="INV-CAR-2025-001" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="Invoice Date" FontSize="11" Foreground="#6B7280"/>
                        <TextBlock x:Name="txtInvoiceDate" Text="30 Oct 2025" 
                                   FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Invoice Body -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" CornerRadius="10" Padding="25" 
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <StackPanel>

                    <!-- Customer Details Section -->
                    <TextBlock Text="CUSTOMER DETAILS" FontSize="13" FontWeight="Bold" 
                               Foreground="#4F46E5" Margin="0,0,0,10"/>
                    <Border Background="#F9FAFB" Padding="15" CornerRadius="8" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtCustomerName" Text="John Doe" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Society:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtSociety" Text="Green Valley" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Flat:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtFlat" Text="A-501" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Mobile:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtMobile" Text="9876543210"/>
                        </Grid>
                    </Border>

                    <!-- Car Details Section -->
                    <TextBlock Text="CAR DETAILS" FontSize="13" FontWeight="Bold" 
                               Foreground="#4F46E5" Margin="0,0,0,10"/>
                    <Border Background="#F9FAFB" Padding="15" CornerRadius="8" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtCarModel" Text="Honda City" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Number:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCarNumber" Text="MH12AB1234"/>
                        </Grid>
                    </Border>

                    <!-- Subscription Details Section -->
                    <TextBlock Text="SUBSCRIPTION DETAILS" FontSize="13" FontWeight="Bold" 
                               Foreground="#4F46E5" Margin="0,0,0,10"/>
                    <Border Background="#F9FAFB" Padding="15" CornerRadius="8" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Plan:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtSubscriptionType" Text="Monthly" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Amount:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtAmount" Text="₹500" FontWeight="Bold" FontSize="16" Foreground="#10B981" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Start Date:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtStartDate" Text="01 Nov 2025" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Due Date:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtDueDate" Text="30 Nov 2025"/>
                        </Grid>
                    </Border>

                    <!-- Washer Info -->
                    <TextBlock Text="ASSIGNED WASHER" FontSize="13" FontWeight="Bold" 
                               Foreground="#4F46E5" Margin="0,0,0,10"/>
                    <Border Background="#F9FAFB" Padding="15" CornerRadius="8" Margin="0,0,0,20">
                        <TextBlock x:Name="txtWasher" Text="Ramesh Kumar" FontSize="14"/>
                    </Border>

                    <!-- Payment Summary -->
                    <Border Background="#EEF2FF" Padding="20" CornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="PAYMENT SUMMARY" FontSize="13" FontWeight="Bold" 
                                       Foreground="#4F46E5" Margin="0,0,0,15"/>

                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Subscription Amount:" FontSize="14"/>
                                <TextBlock x:Name="txtSubtotal" Text="₹500" FontSize="14" HorizontalAlignment="Right"/>
                            </Grid>

                            <Separator Margin="0,10"/>

                            <Grid Margin="0,10,0,0">
                                <TextBlock Text="Total Amount:" FontSize="16" FontWeight="Bold"/>
                                <TextBlock x:Name="txtTotal" Text="₹500" FontSize="18" FontWeight="Bold" 
                                           Foreground="#10B981" HorizontalAlignment="Right"/>
                            </Grid>

                            <Border Background="#FEF3C7" Padding="10" CornerRadius="5" Margin="0,15,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="⚪" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Text="Status: UNPAID" FontSize="12" FontWeight="Bold" Foreground="#D97706"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20" Margin="0,20,0,0" 
                CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnGenerate" Content="✓ Generate Invoice" 
                        Width="150" Height="40" Margin="5"
                        Background="#10B981" Foreground="White" 
                        FontWeight="Bold" FontSize="14"
                        Click="btnGenerate_Click"/>

                <Button x:Name="btnPrint" Content="🖨 Print" 
                        Width="120" Height="40" Margin="5"
                        Background="#3B82F6" Foreground="White" 
                        FontWeight="Bold" FontSize="14"
                        IsEnabled="False"
                        Click="btnPrint_Click"/>

                <Button Content="✕ Cancel" 
                        Width="120" Height="40" Margin="5"
                        Background="#6B7280" Foreground="White" 
                        FontWeight="Bold" FontSize="14"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>