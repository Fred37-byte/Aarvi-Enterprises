<Window x:Class="EmployeeManagerWPF.NewInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Invoice" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Heading -->
        <TextBlock Text="Create New Invoice"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2a4d69"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- Form Body -->
        <StackPanel Grid.Row="1">
            <!-- Customer Name -->
            <TextBlock Text="Customer Name" FontWeight="Bold"/>
            <TextBox x:Name="CustomerNameBox" Height="28" Margin="0 5 0 10" />

            <!-- Invoice Date -->
            <TextBlock Text="Invoice Date" FontWeight="Bold"/>
            <DatePicker x:Name="InvoiceDatePicker" Height="28" Margin="0 5 0 10"/>

            <!-- Invoice Type -->
            <TextBlock Text="Invoice Type" FontWeight="Bold"/>
            <ComboBox x:Name="InvoiceTypeBox" Height="28" Margin="0 5 0 10">
                <ComboBoxItem Content="Customer Invoice" IsSelected="True"/>
                <ComboBoxItem Content="Service Invoice"/>
                <ComboBoxItem Content="Product Invoice"/>
            </ComboBox>

            <!-- Description -->
            <TextBlock Text="Description" FontWeight="Bold"/>
            <TextBox x:Name="DescriptionBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap" Margin="0 5 0 10"/>

            <!-- Total Amount -->
            <TextBlock Text="Total Amount" FontWeight="Bold"/>
            <TextBox x:Name="AmountBox" Height="28" Margin="0 5 0 10" />

            <!-- Status -->
            <TextBlock Text="Status" FontWeight="Bold"/>
            <ComboBox x:Name="StatusBox" Height="28" Margin="0 5 0 10">
                <ComboBoxItem Content="Paid" IsSelected="True"/>
                <ComboBoxItem Content="Unpaid"/>
                <ComboBoxItem Content="Pending"/>
            </ComboBox>
        </StackPanel>

        <!-- Submit Button -->
        <Button Grid.Row="2"
                Content="Submit Invoice"
                Height="35"
                Margin="0,20,0,0"
                Background="#007bff"
                Foreground="White"
                FontWeight="Bold"
                Click="SubmitInvoice_Click"/>
    </Grid>
</Window>
