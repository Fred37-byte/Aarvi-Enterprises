<Window x:Class="EmployeeManagerWPF.NewInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Invoice" Height="800" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#f9f9f9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Heading -->
        <TextBlock Text="Create New Invoice"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2a4d69"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 15"/>

        <!-- Scrollable Form Body -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Service Type -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Service Type" FontWeight="Bold" FontSize="13"/>
                    <ComboBox x:Name="ServiceTypeComboBox" Height="30" Padding="3"
                              SelectionChanged="ServiceTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Aarvi Water Supplier"/>
                        <ComboBoxItem Content="Aarvi Car Washing Service"/>
                        <ComboBoxItem Content="Aarvi Laundry Service"/>
                        <ComboBoxItem Content="Aarvi Web Development"/>
                        <ComboBoxItem Content="Aarvi Tea Service"/>
                        <ComboBoxItem Content="Aarvi Housekeeping"/>
                        <ComboBoxItem Content="Aarvi Maid Service"/>
                        <ComboBoxItem Content="Aarvi Manpower Service"/>
                        <ComboBoxItem Content="Aarvi Stationery"/>
                        <ComboBoxItem Content="Aarvi Material Supplier"/>
                        <ComboBoxItem Content="All Services"/>
                    </ComboBox>
                </StackPanel>

                <!-- Customer Name -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Customer Name" FontWeight="Bold" FontSize="13"/>
                    <ComboBox x:Name="CustomerNameComboBox" Height="30" Padding="3" IsEditable="False"/>
                </StackPanel>

                <!-- Invoice Date -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Invoice Date" FontWeight="Bold" FontSize="13"/>
                    <DatePicker x:Name="InvoiceDatePicker" Height="30" Padding="3"/>
                </StackPanel>

                <!-- Invoice Type -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Invoice Type" FontWeight="Bold" FontSize="13"/>
                    <ComboBox x:Name="InvoiceTypeBox" Height="30" Padding="3">
                        <ComboBoxItem Content="Service Invoice"/>
                        <ComboBoxItem Content="Product Invoice"/>
                    </ComboBox>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Description" FontWeight="Bold" FontSize="13"/>
                    <TextBox x:Name="DescriptionBox" Height="80" Padding="5"
                             AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Total Amount -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Total Amount" FontWeight="Bold" FontSize="13"/>
                    <TextBox x:Name="AmountBox" Height="30" Padding="3"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Margin="0 8">
                    <TextBlock Text="Status" FontWeight="Bold" FontSize="13"/>
                    <ComboBox x:Name="StatusBox" Height="30" Padding="3">
                        <ComboBoxItem Content="Paid" IsSelected="True"/>
                        <ComboBoxItem Content="Unpaid"/>
                        <ComboBoxItem Content="Pending"/>
                    </ComboBox>
                </StackPanel>

                <!-- Dynamic Service Form -->
                <StackPanel x:Name="ServiceDetailsPanel" Margin="0 15 0 0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Submit Button -->
        <Button Grid.Row="2"
                Content="Submit Invoice"
                Height="38"
                Margin="0,15,0,0"
                Background="#007bff"
                Foreground="White"
                FontWeight="Bold"
                FontSize="13"
                Padding="3"
                Click="SubmitInvoice_Click"/>
    </Grid>
</Window>
