<Window x:Class="NewCustomerWindow.newcustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Customer" Height="570" Width="620"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Create Invoice Button -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,20">
            <TextBlock Text="Add New Customer"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2a4d69"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"/>
            <Button Content="Show Invoices"
              Width="120"
              Height="30"
              DockPanel.Dock="Right"
              Background="#007bff"
              Foreground="White"
              Margin="10"
              Click="ShowInvoiceList_Click"/>

            <Button Content="Create Invoice"
                    DockPanel.Dock="Right"
                    Background="#007bff"
                    Foreground="White"
                    Width="120"
                    Height="30"
                    Click="CreateInvoice_Click"/>
        </DockPanel>

        <!-- Form Section -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            
            <StackPanel Margin="0 5">
                <TextBlock Text="Full Name:" />
                <TextBox x:Name="NameBox" Height="28" />
            </StackPanel>

            <StackPanel Margin="0 5">
                <TextBlock Text="Email:" />
                <TextBox x:Name="EmailBox" Height="28" />
            </StackPanel>
            <StackPanel Margin="0 5">
                <TextBlock Text="Select Service:" />
                <ComboBox x:Name="ServiceComboBox" Height="28">
                    <ComboBoxItem Content="Aarvi Water Supplier"/>
                    <ComboBoxItem Content="Aarvi Car Washing Service"/>
                    <ComboBoxItem Content="Aarvi Laundry Service"/>
                    <ComboBoxItem Content="Aarvi Web Development"/>
                    <ComboBoxItem Content="Aarvi Tea Service"/>
                    <ComboBoxItem Content="Aarvi Housekeeping"/>
                    <ComboBoxItem Content="Aarvi Maid Service"/>
                    <ComboBoxItem Content="Aarvi Manpower Service"/>
                    <ComboBoxItem Content="Aarvi Stationery"/>
                    <ComboBoxItem Content="Aarvi Material Supplier"/>
                    <ComboBoxItem Content="All Services"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0 5">
                <TextBlock Text="Phone Number:" />
                <TextBox x:Name="PhoneBox" Height="28" />
            </StackPanel>

            <StackPanel Margin="0 5">
                <TextBlock Text="Address:" />
                <TextBox x:Name="AddressBox" Height="28" />
            </StackPanel>

            <StackPanel Margin="0 5">
                <TextBlock Text="City:" />
                <TextBox x:Name="CityBox" Height="28" />
            </StackPanel>

            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="State:" />
                    <TextBox x:Name="StateBox" Height="28"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Zip Code:" />
                    <TextBox x:Name="ZipBox" Height="28"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Clear"
                    Width="100"
                    Background="#dc3545"
                    Foreground="White"
                    Margin="0,0,10,0"
                    Click="Clear_Click"/>
            <Button Content="Save"
                    Width="100"
                    Background="#28a745"
                    Foreground="White"
                    Click="Save_Click" Height="21" Margin="0,0,0,-0.333" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
