<Window x:Class="NewCustomerWindow.EditSociety"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewCustomerWindow"
        mc:Ignorable="d"
        Title="Edit Society" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Edit Society" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30" 
                   Foreground="#333"/>

        <!-- Form Content -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Top">

            <!-- Society Name (Read-only) -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Society Name" FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock Text=" *" FontSize="14" Foreground="Red"/>
                    <TextBlock Text=" (Cannot be changed)" FontSize="12" Foreground="#888" Margin="10,0,0,0"/>
                </StackPanel>
                <TextBox x:Name="txtSocietyNameEdit"
                         Padding="10" FontSize="14" Margin="0,8,0,0" 
                         BorderBrush="#E0E0E0" BorderThickness="1" 
                         Background="#F8F8F8" IsReadOnly="True"
                         Foreground="#888"/>
            </StackPanel>

            <!-- Address -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Address" FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock Text=" *" FontSize="14" Foreground="Red"/>
                </StackPanel>
                <TextBox x:Name="txtAddressEdit"
                         Padding="10" FontSize="14" Margin="0,8,0,0" 
                         BorderBrush="#E0E0E0" BorderThickness="1" 
                         AcceptsReturn="True" TextWrapping="Wrap" 
                         Height="80" VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"/>
            </StackPanel>

            <!-- Contact Number -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Contact Number" FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock Text=" *" FontSize="14" Foreground="Red"/>
                </StackPanel>
                <TextBox x:Name="txtContactNumberEdit"
                         Padding="10" FontSize="14" Margin="0,8,0,0" 
                         BorderBrush="#E0E0E0" BorderThickness="1" 
                         MaxLength="10" PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>

            <!-- Manager Name -->
            <StackPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Manager Name" FontSize="14" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock Text=" *" FontSize="14" Foreground="Red"/>
                </StackPanel>
                <TextBox x:Name="txtManagerNameEdit"
                         Padding="10" FontSize="14" Margin="0,8,0,0" 
                         BorderBrush="#E0E0E0" BorderThickness="1"/>
            </StackPanel>

            <!-- Total Cars -->
            <StackPanel>
                <TextBlock Text="Total Cars" FontSize="14" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,8"/>
                <TextBox x:Name="txtTotalCarsEdit"
                         Padding="10" FontSize="14" 
                         BorderBrush="#E0E0E0" BorderThickness="1" 
                         PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button x:Name="btnSave" Content="Save Changes" Padding="20,12" FontSize="14" 
                    Background="#4CAF50" Foreground="White" BorderThickness="0" 
                    Cursor="Hand" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <!-- 🔹 New Delete Button -->
            <Button x:Name="btnDelete" Content="Delete" Padding="20,12" FontSize="14" 
                    Background="#DC3545" Foreground="White" BorderThickness="0" 
                    Cursor="Hand" Margin="0,0,10,0" Click="BtnDelete_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Padding="20,12" FontSize="14" 
                    Background="#6C757D" Foreground="White" BorderThickness="0" 
                    Cursor="Hand" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
