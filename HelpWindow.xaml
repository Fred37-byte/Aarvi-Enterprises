<Window x:Class="NewCustomerWindow.xaml.HelpWindow"
       
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewCustomerWindow.xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpWindow">
    <ScrollViewer Margin="10">
        <StackPanel>
            <TextBlock FontSize="18" FontWeight="Bold" Text="Service Descriptions" Margin="0 0 0 10"/>

            <!-- Description content -->
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Water Supplier – We deliver clean drinking water across the city.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Car Washing Service – Professional car cleaning at your doorstep.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Laundry Service – Affordable laundry pickup and delivery services.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Web Development – We design modern, responsive websites.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Tea Service – Fresh tea and beverages for offices and events.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Manpower Service – Trained staff for various industries and roles.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Housekeeping – Reliable housekeeping services for homes and offices.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Stationery – Complete office and school stationery supplies.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Material Supplier – Building and industrial material supply services.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ Aarvi Maid Service – Trained maids available for daily or part-time work.
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0 5">
                ✔ All Services – View all our available services in one place.
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</Window>
