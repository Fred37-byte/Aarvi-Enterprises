<Window x:Class="NewCustomerWindow.xaml.ViewInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Preview"
        Height="900" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Invoice Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    Margin="30"
                    Padding="50"
                    BorderBrush="#dee2e6" 
                    BorderThickness="1">
                <StackPanel>

                    <!-- Header Section -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Company Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Aarvi Enterprise"
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="#2c3e50"/>
                            <TextBlock Text="Anil Patil"
                                       FontSize="11"
                                       Foreground="#6c757d"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="Business Number 9868964797"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Patil niwas, opposite priya haveli,"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="near madhuaai temple, waghbil"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="gaon, GB road, Thane W, 400615"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="Thane, Maharashtra 400615"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="9980875757"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="aarvi.com"
                                       FontSize="10"
                                       Foreground="#0066cc"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="aarvienterprise@gmail.com"
                                       FontSize="10"
                                       Foreground="#6c757d"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Right: INVOICE Title -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <TextBlock Text="INVOICE"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#2c3e50"
                                       HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding InvoiceId, StringFormat='INV{0:D4}'}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#2c3e50"
                                       HorizontalAlignment="Right"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Date, Due, Balance Section -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- DATE -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="DATE"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="#000000"/>
                            <TextBlock Text="{Binding InvoiceDate, StringFormat='MMM d, yyyy'}"
                                       FontSize="12"
                                       Foreground="#2c3e50"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- STATUS (Dynamic based on payment status) -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="STATUS"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="#000000"/>
                            <Border x:Name="StatusBadge"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    Margin="0,4,0,0"
                                    HorizontalAlignment="Left">
                                <TextBlock x:Name="StatusText"
                                           FontSize="11"
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <!-- BALANCE DUE -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock x:Name="BalanceLabel"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="#000000"
                                       HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='INR ₹{0:N2}'}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#2c3e50"
                                       HorizontalAlignment="Right"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- BILL TO Section -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="BILL TO"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   Foreground="#000000"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding CustomerName}"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#2c3e50"/>
                        <TextBlock Text="{Binding CustomerAddress}"
                                   FontSize="11"
                                   Foreground="#6c757d"
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,0"/>
                        <TextBlock Text="{Binding CustomerCity}"
                                   FontSize="11"
                                   Foreground="#6c757d"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="{Binding CustomerZipCode}"
                                   FontSize="11"
                                   Foreground="#6c757d"
                                   Margin="0,2,0,0"/>
                        <TextBlock Text="{Binding CustomerPhone}"
                                   FontSize="11"
                                   Foreground="#6c757d"
                                   Margin="0,4,0,0"/>
                        <TextBlock Text="{Binding CustomerEmail}"
                                   FontSize="11"
                                   Foreground="#6c757d"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Items Table -->
                    <Grid Margin="0,0,0,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="White"
                                BorderBrush="#000000"
                                BorderThickness="0,0,0,2"
                                Padding="0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="DESCRIPTION" FontSize="10" FontWeight="Bold" Foreground="#000000"/>
                                <TextBlock Grid.Column="1" Text="RATE" FontSize="10" FontWeight="Bold" Foreground="#000000" TextAlignment="Right"/>
                                <TextBlock Grid.Column="2" Text="QTY" FontSize="10" FontWeight="Bold" Foreground="#000000" TextAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="AMOUNT" FontSize="10" FontWeight="Bold" Foreground="#000000" TextAlignment="Right"/>
                            </Grid>
                        </Border>

                        <!-- Table Items -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding InvoiceItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#dee2e6" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Description -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ItemName}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2c3e50"/>
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="10"
                                                           Foreground="#6c757d"
                                                           TextWrapping="Wrap"
                                                           Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <!-- Rate -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Rate, StringFormat='₹{0:N2}'}"
                                                       FontSize="11"
                                                       Foreground="#2c3e50"
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Center"/>

                                            <!-- Quantity -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Quantity}"
                                                       FontSize="11"
                                                       Foreground="#2c3e50"
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Center"/>

                                            <!-- Amount -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding Amount, StringFormat='₹{0:N2}'}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2c3e50"
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- Totals Section -->
                    <Grid HorizontalAlignment="Right" MinWidth="300" Margin="0,10,0,0">
                        <StackPanel>
                            <!-- Subtotal -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="SUBTOTAL"
                                           FontSize="11"
                                           Foreground="#2c3e50"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,20,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Subtotal, StringFormat='₹{0:N2}'}"
                                           FontSize="11"
                                           Foreground="#2c3e50"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Discount -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding DiscountText}"
                                           FontSize="11"
                                           Foreground="#2c3e50"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,20,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DiscountAmount, StringFormat='-₹{0:N2}'}"
                                           FontSize="11"
                                           Foreground="#2c3e50"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Separator -->
                            <Rectangle Height="1" Fill="#dee2e6" Margin="0,5,0,8"/>

                            <!-- Total -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="TOTAL"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,20,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding TotalAmount, StringFormat='₹{0:N2}'}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#2c3e50"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Balance Due Highlight -->
                            <Border x:Name="BalanceDueBorder"
                                    Padding="15,10"
                                    CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               x:Name="BalanceDueLabel"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding TotalAmount, StringFormat='INR ₹{0:N2}'}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#2c3e50"
                                               Margin="15,0,0,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#dee2e6"
                BorderThickness="0,1,0,0"
                Padding="30,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="📥 Download PDF"
                        Width="180" Height="45"
                        Margin="0,0,15,0"
                        Click="DownloadPdf_Click"
                        Background="#007bff"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#007bff"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0056b3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="✖ Close"
                        Width="140" Height="45"
                        Click="Close_Click"
                        Background="#6c757d"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6c757d"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5a6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>