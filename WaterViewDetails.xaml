<Window x:Class="NewCustomerWindow.xaml.WaterViewDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="💧 Water Order Details" Foreground="#3498DB" Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="DetailLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="DetailValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" Margin="20" CornerRadius="12" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="💧" Foreground="#3498DB" FontSize="36" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Water Order Details" 
                                 FontSize="26" 
                                 FontWeight="Bold"
                                 Foreground="#2C3E50"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Complete information about this water delivery order" 
                             FontSize="13" 
                             Foreground="#95A5A6"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Order ID Badge -->
                <Border Grid.Row="1" 
                        Background="#E3F2FD" 
                        CornerRadius="8" 
                        Padding="15,10"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,25">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Order ID: " 
                                 FontSize="14" 
                                 Foreground="#1565C0"
                                 FontWeight="SemiBold"/>
                        <TextBlock Name="OrderIdBadge" 
                                 Text="#0000" 
                                 FontSize="14" 
                                 Foreground="#0D47A1"
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Details Grid -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Invoice ID -->
                        <Border Grid.Row="0" Background="#F8F9FA" Padding="15" CornerRadius="6" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📋 Invoice ID" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Name="InvoiceIdText" Text="-" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                        </Border>

                        <!-- Customer Name -->
                        <Border Grid.Row="1" Background="#F8F9FA" Padding="15" CornerRadius="6" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="👤 Customer Name" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Name="CustomerNameText" Text="-" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                        </Border>

                        <!-- Brand & Size Row -->
                        <Grid Grid.Row="2" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Brand -->
                            <Border Grid.Column="0" Background="#F8F9FA" Padding="15" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="🏷️ Brand" Style="{StaticResource DetailLabel}"/>
                                    <TextBlock Name="BrandText" Text="-" Style="{StaticResource DetailValue}"/>
                                </StackPanel>
                            </Border>

                            <!-- Bottle Size -->
                            <Border Grid.Column="2" Background="#F8F9FA" Padding="15" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="📏 Bottle Size" Style="{StaticResource DetailLabel}"/>
                                    <TextBlock Name="BottleSizeText" Text="-" Style="{StaticResource DetailValue}"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Units -->
                        <Border Grid.Row="3" Background="#E8F5E9" Padding="15" CornerRadius="6" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🔢 Units Ordered" Style="{StaticResource DetailLabel}" Foreground="#2E7D32"/>
                                <TextBlock Name="UnitsText" Text="-" Style="{StaticResource DetailValue}" Foreground="#1B5E20" FontWeight="Bold" FontSize="20"/>
                            </StackPanel>
                        </Border>

                        <!-- Delivery Date -->
                        <Border Grid.Row="4" Background="#F8F9FA" Padding="15" CornerRadius="6" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📅 Delivery Date" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Name="DeliveryDateText" Text="-" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                        </Border>

                        <!-- Delivery Address -->
                        <Border Grid.Row="5" Background="#F8F9FA" Padding="15" CornerRadius="6" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📍 Delivery Address" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Name="AddressText" Text="-" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>

                <!-- Action Buttons -->
                <Grid Grid.Row="3" Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="📄 View Full Invoice" 
                            Style="{StaticResource ModernButton}"
                            Background="#3498DB"
                            Click="ViewInvoiceButton_Click"/>

                    <Button Grid.Column="2" 
                            Content="✖️ Close" 
                            Style="{StaticResource ModernButton}"
                            Background="#95A5A6"
                            Click="CloseButton_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>